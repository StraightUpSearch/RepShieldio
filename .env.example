# RepShield.io Environment Variables
# Copy this file to .env and fill in your values

# ============ REQUIRED FOR PRODUCTION ============

# Node environment
NODE_ENV=production

# Session secret (min 32 chars, generate with: openssl rand -hex 32)
SESSION_SECRET=

# Database (PostgreSQL connection string)
DATABASE_URL=postgresql://user:password@host:5432/repshield

# Base URL for password reset links and callbacks
RESET_URL_BASE=https://repshield.io

# Server port (Railway sets this automatically)
PORT=3000

# ============ PAYMENTS (Stripe) ============

STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Optional: Stripe Price IDs for subscription tiers
# STRIPE_PRICE_BASIC=price_...
# STRIPE_PRICE_PRO=price_...
# STRIPE_PRICE_ENTERPRISE=price_...

# ============ EMAIL (SendGrid) ============

SENDGRID_API_KEY=SG....
FROM_EMAIL=support@repshield.io

# Admin notification email
ADMIN_EMAIL=jamie@straightupsearch.com

# ============ AI FEATURES (Optional) ============

# OpenAI - powers chatbot and auto-generated specialist reports
OPENAI_API_KEY=sk-...

# ============ SCANNING (Optional) ============

# Reddit API - for live brand scanning
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=RepShield/1.0

# ScrapingBee - for web platform scanning
SCRAPINGBEE_API_KEY=

# ============ NOTIFICATIONS (Optional) ============

# Telegram bot for admin alerts
TELEGRAM_BOT_TOKEN=
TELEGRAM_ADMIN_CHAT_ID=

# ============ ADMIN ============

# Comma-separated list of admin emails (auto-assigned admin role on register)
ADMIN_EMAILS=jamie@straightupsearch.com

{
  "name": "repshield-mvp",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "description": "RepShield.io - Simple Reddit content removal ticketing system",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx server/index.ts",
    "dev:win": "set NODE_ENV=development && tsx server/index.ts",
    "build": "vite build && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "db:migrate": "drizzle-kit migrate",
    "test:e2e": "playwright test tests/repshield-complete-e2e.spec.ts --project=chromium",
    "test:e2e:ui": "playwright test tests/repshield-complete-e2e.spec.ts --project=chromium --ui",
    "test:e2e:headed": "playwright test tests/repshield-complete-e2e.spec.ts --project=chromium --headed",
    "preview": "vite preview"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-alert-dialog": "^1.1.7",
    "@radix-ui/react-avatar": "^1.1.4",
